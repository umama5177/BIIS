                    <web style="margin: 120% 0 0 0;"><a href="https://webmail.buet.ac.bd/">BUET WebMail</a></web>
                </div>
                    <div class="inside_right">
                        <div class="contact" style="width: 50%;height: 50%;text-align: center;">
                            <h4><b>View Grades</b></h4><hr>
                            <p>Session&emsp;&emsp;&emsp;Level/Term</p>
                            <form method="post" action="/grade/show/<%= std_id%>">
                                <select name="session">
                                    <option value=''>select a level/term</option>
                                    <% for(var i=0;i<terms.length;i++){%>
                                        <option value="<%= terms[i].term_id%>"><%= terms[i].session%> L<%=terms[i].level%>/T<%=terms[i].term%></option>
                                    <% } %>                                  
                                    
                                </select>   
                                <br>
                                <input type="submit" class="button" value="show">                                                                           
                            </form>
                        </div>
                        <img src="/images/bottom.png" style="margin-top: 130px;" >
                    </div>
                             
                </div>
               
            </div>
            
       
